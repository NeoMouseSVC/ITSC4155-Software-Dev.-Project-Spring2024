<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeFragment">

    <LinearLayout
        android:id="@+id/colorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageButton
        android:id="@+id/themeButton6"
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10sp"
        android:background="@drawable/space_background"/>

    <ImageButton
        android:id="@+id/themeButton6"
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10sp"
        android:background="@drawable/si_recolor_background"/>

    <ImageButton
        android:id="@+id/themeButton6"
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10sp"
        android:background="@drawable/pacman_background"/>

    <ImageButton
        android:id="@+id/themeButton6"
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10sp"
        android:background="@drawable/dk_background"/>

    <ImageButton
        android:id="@+id/themeButton1"
