<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_background">

    <!-- UI elements for difficulty selection -->

    <TextView
        android:id="@+id/textChooseDifficulty"
        android:layout_width="262dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_rect"
        android:text="Choose Difficulty"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBeginner"
            android:layout_width="317dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:foreground="@drawable/purple_rect"
            android:gravity="center"
            android:text=""
            android:textSize="54sp" />

        <TextView
            android:id="@+id/textBeginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textColor="@android:color/white"
            android:textSize="54sp"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- Intermediate -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/btnIntermediate"
        android:layout_width="317dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:foreground="@drawable/purple_rect"
        android:text=""
        android:gravity="center"
        android:textSize="54sp" />

    <TextView
        android:id="@+id/textIntermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intermediate"
        android:textColor="@android:color/white"
        android:textSize="54sp"
        android:layout_gravity="center" />
    </FrameLayout>

    <!-- Advanced -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="352dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAdvanced"
            android:layout_width="317dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:foreground="@drawable/purple_rect"
            android:text=""
            android:gravity="center"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/textAdvanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textColor="@android:color/white"
            android:textSize="54sp"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="167dp"
        android:layout_height="70dp"
        android:layout_marginTop="524dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/return_difficulty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/purple_rect"
            android:text=""
            android:gravity="center"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/textReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:textColor="@android:color/white"
            android:textSize="44sp"
            android:layout_gravity="center" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>