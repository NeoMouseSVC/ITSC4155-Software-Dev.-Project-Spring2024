<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_background"
    android:backgroundTint="#3AAA"
    android:backgroundTintMode="add"
    tools:context=".win_screen">


    <Button
        android:id="@+id/los_exit"
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="374dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="265dp"
        android:text="Exit"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/los_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/los_continue"
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="374dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="265dp"
        android:text="Continue"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/los_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>